 <?php 
  class Traitement {
 // Constructor with DB
    public function __construct($db) {
        $this->conn = $db;
      }

      // Get Hotels
    public function read() {
        // Create query
        $query = 'SELECT *  FROM hotels
                                  ORDER BY id ' ;

        // Prepare statement
         $stmt = $this->conn->prepare($query);

      // Execute query
        $stmt->execute();

      return $stmt;
    }

}
